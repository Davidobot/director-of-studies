POSTGRES_DB=director
POSTGRES_USER=director
POSTGRES_PASSWORD=director
# Docker stack — services reference each other by container name
DATABASE_URL=postgresql://director:director@postgres:5432/director
# Native dev — Next.js and agent both connect directly to localhost
NEXT_PUBLIC_DATABASE_URL=postgresql://director:director@localhost:5432/director

LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=devsecretdevsecretdevsecretdevse
# Docker stack uses container hostname; native dev overrides this in Makefile
LIVEKIT_URL=ws://livekit:7880
NEXT_PUBLIC_LIVEKIT_URL=ws://localhost:7880

# Native dev: Next.js needs to reach the agent on localhost (Makefile overrides this too)
AGENT_URL=http://localhost:8000

OPENAI_API_KEY=
AGENT_OPENAI_MODEL=gpt-4o
SUMMARY_OPENAI_MODEL=gpt-5-mini

# Supabase Cloud Auth
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

DEEPGRAM_API_KEY=
DEEPGRAM_STT_MODEL=flux-general-en
DEEPGRAM_TTS_MODEL=aura-2-draco-en
# Deepgram regional base URL.  EU deployment is the default.
# Switch to https://api.deepgram.com for US routing.
DEEPGRAM_API_URL=https://api.eu.deepgram.com

# Optional: override the OpenAI API base URL for EU data residency.
# Leave blank to use the default global OpenAI API (api.openai.com).
# For Azure OpenAI EU (e.g. uksouth): https://<resource>.openai.azure.com/openai
OPENAI_BASE_URL=

# Seconds of student silence before the tutor prompts them
SILENCE_NUDGE_AFTER_S=3.0
