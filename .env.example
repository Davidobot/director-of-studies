POSTGRES_DB=director
POSTGRES_USER=director
POSTGRES_PASSWORD=director
# Docker stack — services reference each other by container name
DATABASE_URL=postgresql://director:director@postgres:5432/director
# Python API DB pool sizing
DB_POOL_MIN_SIZE=2
DB_POOL_MAX_SIZE=12
# Native dev — Next.js and agent both connect directly to localhost
NEXT_PUBLIC_DATABASE_URL=postgresql://director:director@localhost:5432/director

LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=devsecretdevsecretdevsecretdevse
# Docker stack uses container hostname; native dev overrides this in Makefile
LIVEKIT_URL=ws://livekit:7880
NEXT_PUBLIC_LIVEKIT_URL=ws://localhost:7880

# Python API base URL (also used by native dev targets)
AGENT_URL=http://localhost:8000
# Browser-side direct API base (client components call Python API directly)
NEXT_PUBLIC_API_URL=http://localhost:8000
# Optional shared secret for trusted non-browser callers to Python API
AGENT_INTERNAL_API_KEY=

# Stripe billing
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_PRODUCT_STANDARD_MONTHLY=
STRIPE_PRODUCT_SCHOOL_MONTHLY=
STRIPE_PRODUCT_STANDARD_ANNUAL=
STRIPE_PRODUCT_SCHOOL_ANNUAL=
STRIPE_PRODUCT_CREDIT_1H=
STRIPE_PRODUCT_CREDIT_2H=
STRIPE_PRODUCT_CREDIT_10H=

# Allowed CORS origin for Python API
WEB_ORIGIN=http://localhost:3000

OPENAI_API_KEY=
AGENT_OPENAI_MODEL=gpt-4o
SUMMARY_OPENAI_MODEL=gpt-5-mini
CONTENT_PIPELINE_OPENAI_MODEL=gpt-5-mini

# Supabase Cloud Auth
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Optional demo login user for the "Log in as Guest" button
